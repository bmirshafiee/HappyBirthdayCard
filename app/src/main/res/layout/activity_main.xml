<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/happybirthdaycard"
            android:id="@+id/image_view" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:contentDescription="@string/image_description"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_view"
            android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp" android:text="@string/text_view_string"
            android:textSize="36sp" android:layout_alignParentEnd="true" android:layout_marginEnd="8dp"/>
</RelativeLayout>